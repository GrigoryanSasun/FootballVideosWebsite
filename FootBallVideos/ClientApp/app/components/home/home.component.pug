.container-fluid
  .row.hidden-xs
    .sidebar.col-sm-2
      .row.categories
        h4.categories-title Tournaments & Leugues
        .scrollbar
          ul.list-unstyled.category-item
            li(*ngFor='let tour of tournaments; let i = index', (click)='selectedItem(i)', [class.active]='i==currentTournamentIndex')
              a((click)='getTeamsByTournamentId(tour.id); tournamentClick=true')
                span([ngStyle]="{'background-position':tour.nationalityFlagPosition}")
                |  {{tour.name}}
      .row.categories
        h4.categories-title Clubs
        .scrollbar
          ul.list-unstyled.category-item
            li(*ngFor='let team of teams; let i = index', (click)='selectedItem(i)', [class.active]='i==currentTeamIndex')
              a((click)='getPlayers(team.id, team.teamName);teamClick=true')
                img(src='{{team.teamLogoUrl}}', height='16px', width='16px')
                |  {{team.teamName}}
      .row.categories([hidden]='hidePlayersList')
        h4.categories-title {{teamName}}
        .scrollbar
          ul.list-unstyled.category-item
            li(*ngFor='let player of players')
              a(href='#')
                span([ngStyle]="{'background-position':player.nationalityFlagPosition}")
                | {{player.name}}
    .videos-content.col-sm-10(infinite-scroll='infinite-scroll', (scrolled)='onScrollDown()', [infiniteScrollDistance]='0', [infiniteScrollThrottle]='0')
      .row.row-centered
        .videos.col-lg-4.col-md-4.col-sm-6.col-xs-12.col-centered(*ngFor='let video of videoImages')
          div
            .videos-img-holder
              a(routerLink='/videodetails')
                img(src='/Content/images/VideoImage.jpg')
  .row.visible-xs
    .btns-holder.category-btns
      .col-sm-4.categories-xs
        label.btn.btn-danger.text-uppercase((click)='hideTournamentsDropdown=!hideTournamentsDropdown') Tournaments & Leugues
        .categories-dropdown-content([hidden]='hideTournamentsDropdown')
          .scrollbar
            ul.list-unstyled.category-item
              li(*ngFor='let tour of tournaments; let i = index', (click)='selectedItem(i)', [class.active]='i==currentTournamentIndex')
                a((click)='getTeamsByTournamentId(tour.id)')
                  span([ngStyle]="{'background-position':tour.nationalityFlagPosition}")
                  | {{tour.name}}
        label.btn.btn-danger.text-uppercase((click)='hideClubsDropdown=!hideClubsDropdown') Clubs
        .categories-dropdown-content([hidden]='hideClubsDropdown')
          .scrollbar
            ul.list-unstyled.category-item
              li(*ngFor='let team of teams; let i = index', (click)='selectedItem(i)', [class.active]='i==currentTeamIndex')
                a((click)='getPlayers(team.id, team.teamName)')
                  span([ngStyle]="{'background-position':flagPosition}")
                  | {{team.teamName}}
