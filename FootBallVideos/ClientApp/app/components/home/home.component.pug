.container-fluid
  .row.hidden-xs
    .col-sm-4.categories
      .scrollbar
        h3.categories-title Tournaments & Leugues
        ul.list-unstyled
          li( *ngFor='let tour of tournaments')
            a(href='#')
              span(style="background-position:0 -176px;")
              |  {{tour.whoScoredTourName}}
    .col-sm-4.categories
      .scrollbar
        h3.categories-title Clubs
        ul.list-unstyled
          li( *ngFor='let team of teams')
            a((click)='getPlayers(team.whoScoredTeamId)')
              span(style="background-position:0 -176px;")
              |  {{team.teamName}}
    .col-sm-4.categories
      .scrollbar
        h3.categories-title National Teams
        ul.list-unstyled
          li
            a(href='#')
              span(style="background-position:0 -176px;")
              | UEFA - Champions League
  .row.visible-xs
