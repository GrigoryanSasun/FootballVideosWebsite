          .scrollbar
            ul.list-unstyled
              li( *ngFor='let tour of tournaments')
                a(href='#')
                  img(src='#')
                  | {{tour.whoScoredTourName}}
        label.btn.btn-danger.text-uppercase((click)='hideClubsDropdown=!hideClubsDropdown') Clubs
